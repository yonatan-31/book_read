<%- include('partials/header.ejs'); -%>


<% if (locals.toEdit) { %>
  <div class="form-container">
    <form action="/edited" method="post">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= toEdit.title %>" required><br>
      
        <label for="rating">Rating (1–10):</label>
        <input type="number" id="rating" name="rating" min="1" max="10" value="<%= toEdit.rating %>" required><br>
      
        <label for="read_date">Read Date:</label>
        <input type="date" id="read_date" name="read_date" value="<%= toEdit.read_date %>" required><br>
      
        <label for="short_notes">Notes:</label>
        <textarea id="short_notes" name="short_notes" required><%= toEdit.short_notes %></textarea><br>
        
        <label for="isbn_number">ISBN Number:</label>
        <input type="number" id="isbn_number" name="isbn_number" value="<%= toEdit.isbn_number %>" required><br>
        
        <input type="hidden" name="id" value="<%= toEdit.id %>">
        <input type="submit" value="Edit Book">
      </form>
    </form>
  </div>
    <% } else {%>
      <div class="form-container">
        <h2>Post a New Book</h2>
        <form action="/post" method="post">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required><br>
          
            <label for="rating">Rating (1–10):</label>
            <input type="number" id="rating" name="rating" min="1" max="10" required><br>
          
            <label for="read_date">Read Date:</label>
            <input type="date" id="read_date" name="read_date" required><br>
          
            <label for="short_notes">Notes:</label>
            <textarea id="short_notes" name="short_notes" required></textarea><br>
            
            <label for="isbn_number">ISBN Number:</label>
            <input type="number" id="isbn_number" name="isbn_number" required><br>
        
            <input type="submit" value="Post New Book">
          </form>
      </div>  
      <% } %>






  

  <%- include('partials/footer.ejs'); -%>